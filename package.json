{
  "name": "Product-Server",
  "version": "0.0.6",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:unit-coverage": "jest --coverage --watchAll=false --ci --reporters=default --reporters=jest-junit --coverageReporters=cobertura",
    "typeorm:cli": "npx typeorm-ts-node-commonjs -d src/config/typeorm.config-migrations.ts",
    "seeder:run": "npm run typeorm:cli -- migration:run",
    "migration:generate": "npm run typeorm:cli -- migration:generate",
    "migration:create": "npx typeorm-ts-node-commonjs migration:create",
    "migration:run": "npm run typeorm:cli -- migration:run",
    "migration:revert": "npm run typeorm:cli -- migration:revert",
    "migration:show": "npm run typeorm:cli -- migration:show",
    "db:refresh": "npm run typeorm:cli schema:drop && npm run migration:run"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@apollo/subgraph": "^2.9.3",
    "@nestjs/apollo": "^12.2.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@zdp-pim/zdp-logger": "^1.3.4",
    "apollo-server-express": "^3.13.0",
    "@zdp-pim/zdp-filter": "^1.4.0",
    "class-transformer": "^0.5.1",
    "config": "^3.3.12",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "express-session": "^1.18.1",
    "flat": "^6.0.1",
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.0",
    "graphql-type-json": "^0.3.2",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "nestjs-i18n": "^10.4.9",
    "openid-client": "^3.12.2",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "ts-morph": "^21.0.1",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "suiteNameTemplate": "{filepath}",
          "outputDirectory": ".",
          "outputName": "junit.xml"
        }
      ]
    ]
  }
}
